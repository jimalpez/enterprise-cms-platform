---
import { DashboardHeader } from "@/components/react/Dashboard/Header";
import { Sidebar } from "@/components/react/Dashboard/Sidebar";
import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  currentView?: string;
}

const {
  title,
  description = "Enterprise Content Management Platform",
  currentView,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | CMS Platform</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>
  <body class="flex h-screen bg-background">
    <Sidebar
      open={true}
      onOpenChange={() => {}}
      onNavigate={() => {}}
      currentView={currentView || "dashboard"}
    />
    <div class="flex-1 flex flex-col overflow-hidden">
      <DashboardHeader onMenuClick={() => {}} />
      <main class="flex-1 overflow-auto">
        <slot />
      </main>
    </div>
  </body>
</html>
