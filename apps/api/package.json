{
  "name": "@cms/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "// --- Testing Scripts ---": "",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "// Unit Tests": "",
    "test:unit": "vitest run __tests__/unit",
    "test:unit:watch": "vitest watch __tests__/unit",
    "test:unit:coverage": "vitest run __tests__/unit --coverage",
    "// Integration Tests": "",
    "test:integration": "TEST_TYPE=integration vitest run __tests__/integration",
    "test:integration:watch": "TEST_TYPE=integration vitest watch __tests__/integration",
    "// E2E Tests": "",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "// Coverage": "",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "// Run All Tests": "",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "// CI/CD": "",
    "test:ci": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "@cms/shared": "*",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "next": "15.5.6",
    "next-auth": "^4.24.11",
    "postgres": "^3.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "stripe": "^19.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.3",
    "jest": "^29.7.0",
    "msw": "^2.11.6",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5",
    "vitest": "^4.0.3",
    "vitest-mock-extended": "^3.1.0"
  }
}
